<% include ../partials/boilerplate %>

<div class='book'>
  <h1>Title: <%= data.title %></h1>
  <h2>Author: <%= data.author %></h2>
  <p>Average Rating: <%= data.average_rating %></p>
  <p>Number of Pages: <%= data.number_of_pages %></p>
  <p><a href="/books/<%= data.id %>/edit"> Edit this book </a></p>
  <form action="/books/<%= data.id %>?_method=Delete" method="Post">
    <input type="Submit" value="Delete this book from your list?"/>
  </form>
  <a href='/books/'>See all books</a>
</div>

<% include ../partials/footer %>


